// Prisma schema for Lead Distribution SaaS
// Assumptions: default provider is PostgreSQL via DATABASE_URL.

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum Role {
  seller
  buyer
}

enum BuyerStatus {
  active
  paused
  disabled
}

enum CampaignStatus {
  active
  paused
  stopped
}

enum LeadStatus {
  unassigned
  reserved
  sold
}

enum WalletTransactionType {
  credit
  debit
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  role          Role      @default(seller)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  accounts Account[]
  sessions Session[]
  seller   Seller?
  buyer    Buyer?
}

model Seller {
  id                   String   @id @default(cuid())
  userId               String   @unique
  companyName          String?  @default("")
  stripeCustomerId     String?
  stripeSubscriptionId String?
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt

  user       User     @relation(fields: [userId], references: [id])
  buyers     Buyer[]
  leads      Lead[]
  invoices   SellerInvoice[]
}

model Buyer {
  id            String       @id @default(cuid())
  sellerId      String
  userId        String?
  name          String
  email         String
  phone         String?
  status        BuyerStatus  @default(active)
  walletBalance Decimal      @default(0)
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt

  seller    Seller   @relation(fields: [sellerId], references: [id])
  user      User?    @relation(fields: [userId], references: [id])
  campaigns Campaign[]
  purchases LeadPurchase[]
  wallet    WalletTransaction[]
  leads     Lead[] @relation("LeadBuyer")
}

model Campaign {
  id        String          @id @default(cuid())
  buyerId   String
  name      String
  status    CampaignStatus  @default(active)
  leadTypes String[]
  states    String[]
  maxPrice  Decimal?
  dailyCap  Int?
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt

  buyer Buyer @relation(fields: [buyerId], references: [id])
}

model Lead {
  id              String      @id @default(cuid())
  sellerId        String
  leadType        String
  firstName       String
  lastName        String
  email           String
  phone           String
  state           String
  price           Decimal
  status          LeadStatus  @default(unassigned)
  assignedBuyerId String?
  source          String?
  createdAt       DateTime    @default(now())
  updatedAt       DateTime    @updatedAt

  seller         Seller        @relation(fields: [sellerId], references: [id])
  assignedBuyer  Buyer?        @relation("LeadBuyer", fields: [assignedBuyerId], references: [id])
  purchase       LeadPurchase?
}

model LeadPurchase {
  id          String   @id @default(cuid())
  leadId      String   @unique
  buyerId     String
  price       Decimal
  purchasedAt DateTime @default(now())

  lead  Lead  @relation(fields: [leadId], references: [id])
  buyer Buyer @relation(fields: [buyerId], references: [id])
}

model WalletTransaction {
  id        String                 @id @default(cuid())
  buyerId   String
  amount    Decimal
  type      WalletTransactionType
  reason    String
  meta      Json?
  createdAt DateTime               @default(now())

  buyer Buyer @relation(fields: [buyerId], references: [id])
}

model SellerInvoice {
  id              String   @id @default(cuid())
  sellerId        String
  stripeInvoiceId String
  amount          Decimal
  status          String
  createdAt       DateTime @default(now())

  seller Seller @relation(fields: [sellerId], references: [id])
}

// NextAuth models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@unique([identifier, token])
}
