# PostgreSQL connection string used by Prisma (e.g., Supabase)
DATABASE_URL="postgresql://user:password@host:5432/db"

# Base URL for Auth.js callbacks (set to your deployed URL in production)
NEXTAUTH_URL="http://localhost:3000"

# Long random string for signing Auth.js tokens and cookies
NEXTAUTH_SECRET="your-nextauth-secret"

# Google OAuth credentials for sign-in
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Stripe keys for billing flows (test keys are fine locally)
STRIPE_SECRET_KEY="sk_test_your_stripe_secret"

# Stripe webhook signing secret for verifying incoming events (optional; leave blank to skip webhook verification in local dev)
STRIPE_WEBHOOK_SECRET=""
